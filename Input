while True:
  name=input('Please, enter your name:')
  print('Hello '+name+'! Welcome to While Loops in Python!')

  food=input('Next, enter your favorite food:')
  print(food+'? Yummy!')

  location=input('Consider capitalization. Finnaly, enter your favorite restaurant:')
  print(location+'? Perfect place!')

  print(name+' loves to eat '+food+' in '+location+'.')
  print("The End! Made by Adrian, Alex, Yuliia")
  break
